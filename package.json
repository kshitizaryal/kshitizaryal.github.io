{
  "private": true,
  "name": "kshitizaryal.github.io",
  "title": "Kshitiz Aryal",
  "url": "https://kshitizaryal.com.np",
  "description": "Build assets for kshitizaryal.com.np",
  "scripts": {
    "start": "npm run fresh && npm run build",
    "fresh": "rm -rf node_modules package-lock.json && npm install",
    "build": "npm-run-all clean css",
    "clean": "rimraf src/assets/css/*",
    "css": "npm-run-all css-*",
    "css-compile": "sass --load-path node_modules --style compressed --no-charset --no-source-map --no-error-css \"src/assets/scss/style.scss\" \"src/assets/css/style.css\"",
    "css-postcss": "NODE_ENV=production postcss --replace src/assets/css/style.css",
    "css-banner": "rimraf src/static/assets/css && cpy --flat src/assets/css/style.css src/static/assets/css/ && node banner.config.js",
    "cssdev": "npm-run-all cssdev-*",
    "cssdev-clean": "rimraf src/assets/css/",
    "site-cssdev": "npm run cssdev",
    "cssdev-compile": "sass --load-path node_modules --style expanded --no-charset --source-map --embed-sources --no-error-css \"src/assets/scss/style.scss\" \"src/assets/css/style.css\"",
    "cssdev-postcss": "NODE_ENV=development postcss --replace src/assets/css/style.css --map",
    "copy:cssdev-map": "rimraf _site/assets/css/style.css.map && cpy --flat src/assets/css/style.css.map _site/assets/css",
    "site": "npm-run-all site-*",
    "site-clean": "rimraf _site",
    "site-compile": "HUGO_ENV=development hugo",
    "copy:site-css": "rimraf _site/assets/css/ && cpy --flat src/assets/css/* _site/assets/css",
    "watch": "npm-run-all --parallel watch-*",
    "watch-server": "npm run cssdev && npm run site && npm run copy:cssdev-map && browser-sync start --server ./_site --port 4000 --no-ui --no-open",
    "watch-css": "chokidar \"src/assets/scss/**/*.scss\" -c \"npm run cssdev && npm run copy:site-css && browser-sync reload --port 4000\"",
    "watch-site": "chokidar \"src/**/*.{html,md,svg}\" \"!src/assets/**\" -c \"npm run site-compile && npm run cssdev && npm run copy:site-css && browser-sync reload --port 4000\"",
    "watch-includes": "chokidar \"src/assets/**/*.{css,svg}\" \"!src/assets/css/style.css\" -c \"npm run site-compile && browser-sync reload --port 4000\"",
    "lint": "npm-run-all lint-*",
    "lint-css": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache || true",
    "lint-site": "hugo && linkinator \"./_site\" --recurse --verbosity error",
    "minify-icons": "minify --type=svg --match=\\.svg --recursive --output \"./src/layouts/partials/icons/\" \"./src/layouts/partials/icons/\" --verbose",
    "format": "prettier --write \"**/*.{js,scss,json,yml,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fontsource/jost": "^4.5.13",
    "@fortawesome/fontawesome-free": "6.3.0",
    "normalize.css": "8.0.1",
    "reset.css": "^2.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.1",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^4.2.0",
    "cssnano": "^6.0.0",
    "hugo-bin": "^0.101.4",
    "linkinator": "^4.1.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "sass": "^1.60.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-twbs-bootstrap": "^7.0.0",
    "stylelint-prettier": "^3.0.0"
  },
  "main": "_site/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KshitizAryal/kshitizaryal.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/KshitizAryal/kshitizaryal.github.io/issues"
  },
  "homepage": "https://github.com/KshitizAryal/kshitizaryal.github.io#readme",
  "author": "Milan Aryal (https://milanaryal.com.np)",
  "license": "MIT"
}
