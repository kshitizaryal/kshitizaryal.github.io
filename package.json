{
  "private": true,
  "name": "kshitizaryal.github.io",
  "title": "Kshitiz Aryal",
  "url": "https://kshitizaryal.com.np",
  "description": "Build assets for kshitizaryal.com.np",
  "scripts": {
    "start": "npm run fresh && npm run build",
    "fresh": "rm -rf node_modules package-lock.json && npm install",
    "build": "npm-run-all clean css",
    "clean": "rimraf src/assets/css/ src/_includes/css/style.min.css",
    "css": "npm-run-all css-*",
    "css-compile": "sass --load-path node_modules --style compressed --no-charset --no-source-map --no-error-css \"src/_assets/scss/style.scss\" \"src/assets/css/style.min.css\"",
    "css-postcss": "NODE_ENV=production postcss --replace src/assets/css/style.min.css",
    "css-include": "rimraf src/_includes/css/style.min.css && cpy --flat src/assets/css/style.min.css src/_includes/css/",
    "css-banner": "node banner.config.js",
    "cssdev": "npm-run-all cssdev-*",
    "cssdev-clean": "rimraf src/assets/css/",
    "site-cssdev": "npm run cssdev",
    "cssdev-compile": "sass --load-path node_modules --style expanded --no-charset --source-map --embed-sources --no-error-css \"src/_assets/scss/style.scss\" \"src/assets/css/style.css\"",
    "cssdev-postcss": "NODE_ENV=development postcss --replace src/assets/css/style.css --map",
    "copy-fonts": "rimraf src/assets/fonts/ && cpy --flat src/_assets/fonts/* src/assets/fonts/",
    "site": "npm-run-all site-*",
    "site-clean": "bundle exec jekyll clean",
    "site-compile": "bundle exec jekyll build --config _config.yml,_config_dev.yml --profile --trace",
    "copy:site-css": "rimraf _site/assets/css/ && cpy --flat src/assets/css/* _site/assets/css",
    "watch": "npm-run-all --parallel watch-*",
    "watch-server": "npm run cssdev && npm run site && browser-sync start --server ./_site --port 4000 --no-ui --no-open",
    "watch-css": "chokidar \"src/_assets/scss/**/*.scss\" -c \"npm run cssdev && npm run copy:site-css && browser-sync reload --port 4000\"",
    "watch-site": "chokidar \"src/**/*.{html,md}\" \"!src/_assets/**\" -c \"npm run site-compile && npm run cssdev && npm run copy:site-css && browser-sync reload --port 4000\"",
    "watch-includes": "chokidar \"src/_includes/**/*.{css,svg}\" \"!src/_includes/css/style.css\" -c \"npm run site-compile && browser-sync reload --port 4000\"",
    "lint": "npm-run-all lint-*",
    "lint-css": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache || true",
    "lint-site": "JEKYLL_ENV=production bundle exec jekyll build --profile --trace && linkinator \"./_site\" --recurse --verbosity error",
    "minify-icons": "minify --type=svg --match=\\.svg --recursive --output \"./src/_includes/\" \"./src/_includes/icons/\" --verbose",
    "format": "prettier --write \"**/*.{js,scss,json,yml,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fontsource/jost": "^4.5.12",
    "@fortawesome/fontawesome-free": "6.2.0",
    "normalize.css": "8.0.1",
    "reset.css": "^2.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^4.2.0",
    "cssnano": "^5.1.14",
    "linkinator": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.56.0",
    "stylelint": "^14.14.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-twbs-bootstrap": "^6.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "main": "_site/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KshitizAryal/kshitizaryal.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/KshitizAryal/kshitizaryal.github.io/issues"
  },
  "homepage": "https://github.com/KshitizAryal/kshitizaryal.github.io#readme",
  "author": "Milan Aryal (https://milanaryal.com.np)",
  "license": "MIT"
}
